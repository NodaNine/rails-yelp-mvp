<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<%= link_to 'Restaurants list', restaurants_path %>

<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.rating %>/5 - <%= review.content %></li>
  <% end %>
</ul>
<%# <%= link_to 'Add a review', new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>

<p>
  <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
    Add a review
  </button>
</p>
<div class="collapse" id="collapseExample">
  <div class="card card-body">
    <h1>New review</h1>
  <%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>
<p>Thanks for helping other users!</p>
  </div>
</div>
